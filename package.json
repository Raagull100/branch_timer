{
  "name": "branch-time-tracker",
  "displayName": "Branch Time Tracker",
  "description": "Automatically tracks development time per Git branch with idle detection, session persistence, and visual reports - perfect for timesheet accuracy and productivity insights.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Raagull100/branch_timer"
  },
  "publisher": "RaagullSakthivel",
  "author": "Raagull Sakthivel V",
  "license": "MIT",
  "keywords": [
    "git",
    "branch",
    "time tracking",
    "productivity",
    "development",
    "timesheet"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:branchTimer.start"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "branchTimer.start",
        "title": "Branch Timer: Start Tracking"
      },
      {
        "command": "branchTimer.showTotalTime",
        "title": "Branch Timer: Show Total Time"
      },
      {
        "command": "branchTimer.viewTimeReport",
        "title": "Branch Timer: View Time Report"
      },
      {
        "command": "branchTimer.exportTimeData",
        "title": "Branch Timer: Export Time Data"
      },
      {
        "command": "branchTimer.clearTimeData",
        "title": "Branch Timer: Clear Workspace Data"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  }
}